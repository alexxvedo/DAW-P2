    Pedido [label="{Pedido | - id: String\l- id_usuario: String\l- total: Float\l| + getId(): String\l+ getId_usuario(): String\l+ getTotal(): Float\l+ setId(String)\l+ setId_usuario(String)\l+ setTotal(Float)\l}"];

